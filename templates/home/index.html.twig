{% extends 'base.html.twig' %}

{% block title %}Welcome to StreamPlus{% endblock %}

{% block body %}
<div class="hero-section bg-dark text-white py-5">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-md-6">
                <h1 class="display-4 fw-bold mb-4">Welcome to StreamPlus</h1>
                <p class="lead mb-4">Your ultimate destination for premium streaming content. Watch your favorite movies, TV shows, and exclusive content anytime, anywhere.</p>
                <div class="d-flex gap-3">
                    <a href="{{ path('app_register_step1') }}" class="btn btn-primary btn-lg">Get Started</a>
                    <a href="#features" class="btn btn-outline-light btn-lg">Learn More</a>
                </div>
            </div>
            <div class="col-md-6">
                <img src="https://placehold.co/600x400" alt="StreamPlus Preview" class="img-fluid rounded shadow">
            </div>
        </div>
    </div>
</div>

<section id="features" class="py-5">
    <div class="container">
        <h2 class="text-center mb-5">Why Choose StreamPlus?</h2>
        <div class="row g-4">
            <div class="col-md-4">
                <div class="card h-100 border-0 shadow-sm">
                    <div class="card-body text-center">
                        <div class="feature-icon mb-3">
                            <i class="bi bi-tv fs-1 text-primary"></i>
                        </div>
                        <h3 class="h5">Premium Content</h3>
                        <p class="text-muted">Access to exclusive movies, TV shows, and original content.</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card h-100 border-0 shadow-sm">
                    <div class="card-body text-center">
                        <div class="feature-icon mb-3">
                            <i class="bi bi-device-hdd fs-1 text-primary"></i>
                        </div>
                        <h3 class="h5">Offline Viewing</h3>
                        <p class="text-muted">Download content to watch offline on any device.</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card h-100 border-0 shadow-sm">
                    <div class="card-body text-center">
                        <div class="feature-icon mb-3">
                            <i class="bi bi-people fs-1 text-primary"></i>
                        </div>
                        <h3 class="h5">Multiple Profiles</h3>
                        <p class="text-muted">Create separate profiles for family members.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<section class="pricing py-5 bg-light">
    <div class="container">
        <h2 class="text-center mb-5">Choose Your Plan</h2>
        <div class="row justify-content-center">
            <div class="col-md-4">
                <div class="card border-0 shadow-sm mb-4">
                    <div class="card-body text-center">
                        <h3 class="card-title">Free</h3>
                        <div class="display-4 my-3">$0</div>
                        <ul class="list-unstyled">
                            <li class="mb-2">Limited content access</li>
                            <li class="mb-2">Standard quality</li>
                            <li class="mb-2">Ad-supported</li>
                        </ul>
                        <a href="{{ path('app_register_step1') }}" class="btn btn-outline-primary">Get Started</a>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card border-0 shadow-sm mb-4">
                    <div class="card-body text-center">
                        <div class="ribbon ribbon-top-right"><span>Popular</span></div>
                        <h3 class="card-title">Premium</h3>
                        <div class="display-4 my-3">$9.99</div>
                        <ul class="list-unstyled">
                            <li class="mb-2">Full content access</li>
                            <li class="mb-2">HD & 4K quality</li>
                            <li class="mb-2">Ad-free experience</li>
                            <li class="mb-2">Offline downloads</li>
                        </ul>
                        <a href="{{ path('app_register_step1') }}" class="btn btn-primary">Get Started</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<style>
.hero-section {
    background: linear-gradient(135deg, #1a1a1a 0%, #2d2d2d 100%);
    min-height: 80vh;
    display: flex;
    align-items: center;
}

.feature-icon {
    width: 80px;
    height: 80px;
    margin: 0 auto;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: rgba(var(--bs-primary-rgb), 0.1);
    border-radius: 50%;
}

.ribbon {
    width: 150px;
    height: 150px;
    overflow: hidden;
    position: absolute;
}

.ribbon span {
    position: absolute;
    display: block;
    width: 225px;
    padding: 8px 0;
    background-color: var(--bs-primary);
    box-shadow: 0 5px 10px rgba(0,0,0,.1);
    color: #fff;
    text-transform: uppercase;
    text-align: center;
    font-size: 17px;
    transform: rotate(45deg);
    right: -25px;
    top: 30px;
}

.ribbon-top-right {
    top: -10px;
    right: -10px;
}
</style>
{% endblock %} 